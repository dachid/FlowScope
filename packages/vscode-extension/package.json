{
  "name": "flowscope",
  "displayName": "FlowScope Debugger",
  "description": "LLM Chain Debugging and Observability for VS Code",
  "version": "0.1.0",
  "publisher": "flowscope",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Debuggers",
    "Other",
    "Visualization"
  ],
  "keywords": [
    "llm",
    "langchain",
    "llamaindex",
    "debugging",
    "observability",
    "ai",
    "tracing"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onCommand:flowscope.openDebugger",
    "onCommand:flowscope.startTracing"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flowscope.openDebugger",
        "title": "Open FlowScope Debugger",
        "category": "FlowScope",
        "icon": "$(debug-alt)"
      },
      {
        "command": "flowscope.startTracing",
        "title": "Start Tracing",
        "category": "FlowScope",
        "icon": "$(play)"
      },
      {
        "command": "flowscope.stopTracing",
        "title": "Stop Tracing",
        "category": "FlowScope",
        "icon": "$(stop)"
      },
      {
        "command": "flowscope.refreshTraces",
        "title": "Refresh Traces",
        "category": "FlowScope",
        "icon": "$(refresh)"
      },
      {
        "command": "flowscope.exportTrace",
        "title": "Export Current Trace",
        "category": "FlowScope",
        "icon": "$(export)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowscope",
          "title": "FlowScope",
          "icon": "$(debug-alt)"
        }
      ]
    },
    "views": {
      "flowscope": [
        {
          "id": "flowscope.traces",
          "name": "Traces",
          "when": "flowscope.enabled"
        },
        {
          "id": "flowscope.prompts",
          "name": "Prompt Versions",
          "when": "flowscope.enabled"
        },
        {
          "id": "flowscope.bookmarks",
          "name": "Bookmarks",
          "when": "flowscope.enabled"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "flowscope.refreshTraces",
          "when": "view == flowscope.traces",
          "group": "navigation"
        },
        {
          "command": "flowscope.startTracing",
          "when": "view == flowscope.traces && !flowscope.tracing",
          "group": "navigation"
        },
        {
          "command": "flowscope.stopTracing",
          "when": "view == flowscope.traces && flowscope.tracing",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "flowscope.exportTrace",
          "when": "view == flowscope.traces && viewItem == trace",
          "group": "flowscope"
        }
      ],
      "editor/context": [
        {
          "command": "flowscope.openDebugger",
          "when": "resourceExtname == .py || resourceExtname == .ts || resourceExtname == .js",
          "group": "flowscope"
        }
      ]
    },
    "configuration": {
      "title": "FlowScope",
      "properties": {
        "flowscope.serverUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "FlowScope backend server URL"
        },
        "flowscope.autoTrace": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start tracing when opening Python/TypeScript files"
        },
        "flowscope.showInlineDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline debugging decorations in editor"
        },
        "flowscope.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for FlowScope actions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "@flowscope/shared": "file:../shared"
  }
}
