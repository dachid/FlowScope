{
  "name": "@flowscope/desktop-app",
  "version": "1.0.0",
  "description": "FlowScope Desktop Application - Electron-based LLM debugging tool",
  "main": "dist/main/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron dist/main/main.js",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "test": "jest",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "format": "prettier --write src/**/*.ts src/**/*.tsx"
  },
  "keywords": [
    "llm",
    "debugging",
    "observability",
    "electron",
    "desktop"
  ],
  "dependencies": {
    "@tanstack/react-query": "^5.84.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "electron-log": "^5.4.2",
    "express": "^4.18.2",
    "react-query": "^3.39.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-updater": "^6.6.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.flowscope.desktop",
    "productName": "FlowScope Desktop",
    "directories": {
      "output": "dist/packages"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "dachid",
      "repo": "FlowScope"
    }
  },
  "author": "FlowScope Team",
  "license": "MIT"
}
