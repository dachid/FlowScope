{
  "name": "flowscope-vscode",
  "displayName": "FlowScope",
  "description": "AI debugging companion for FlowScope Desktop",
  "version": "0.1.0",
  "publisher": "flowscope",
  "repository": {
    "type": "git",
    "url": "https://github.com/flowscope/flowscope-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "ai",
    "debugging",
    "tracing",
    "llm",
    "flowscope"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flowscope.connectToDesktop",
        "title": "Connect to FlowScope Desktop",
        "category": "FlowScope"
      },
      {
        "command": "flowscope.startTracing",
        "title": "Start Tracing Session",
        "category": "FlowScope"
      },
      {
        "command": "flowscope.stopTracing",
        "title": "Stop Tracing Session",
        "category": "FlowScope"
      },
      {
        "command": "flowscope.openDesktop",
        "title": "Open FlowScope Desktop",
        "category": "FlowScope"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "flowscope.startTracing",
          "when": "flowscope.connected",
          "group": "flowscope"
        }
      ],
      "explorer/context": [
        {
          "command": "flowscope.startTracing",
          "when": "flowscope.connected",
          "group": "flowscope"
        }
      ]
    },
    "configuration": {
      "title": "FlowScope",
      "properties": {
        "flowscope.desktopPort": {
          "type": "number",
          "default": 31847,
          "description": "Port for FlowScope Desktop API server"
        },
        "flowscope.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to FlowScope Desktop on startup"
        },
        "flowscope.highlightTraces": {
          "type": "boolean",
          "default": true,
          "description": "Highlight code lines during trace execution"
        }
      }
    },
    "statusBarItems": [
      {
        "id": "flowscope.status",
        "name": "FlowScope Status",
        "text": "$(debug-disconnect) FlowScope",
        "tooltip": "FlowScope connection status",
        "command": "flowscope.connectToDesktop",
        "alignment": "left",
        "priority": 100
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
